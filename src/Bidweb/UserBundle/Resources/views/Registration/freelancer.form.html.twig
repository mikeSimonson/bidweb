{% extends "FOSUserBundle::Registration/register.html.twig" %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <form action="{{ path('freelancer_registration') }}" {{ form_enctype(form) }} method="POST" id="loginForm">
        <div class="row">
            {{ form_errors(form) }}
            <div class="form-group col-lg-6">
                {{ form_row(form.username,{ 'label' : 'form.username'|trans,'attr': {'class': 'form-control'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.plainPassword.first,{ 'label' : 'form.password'|trans,'attr': {'class': 'form-control'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.plainPassword.second,{ 'label' : 'form.password_confirmation'|trans,'attr': {'class': 'form-control'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.email,{ 'label' : 'form.email'|trans,'attr': {'class': 'form-control'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.firstName,{ 'label' : 'first.name'|trans,'attr': {'class': 'form-control'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.lastName,{ 'label' : 'last.name'|trans,'attr': {'class': 'form-control'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.address,{ 'label' : 'address'|trans,'attr': {'class': 'form-control','novalidate': 'novalidate'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.city,{ 'label' : 'city'|trans,'attr': {'class': 'form-control','novalidate': 'novalidate'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.state,{ 'label' : 'state'|trans,'attr': {'class': 'form-control','novalidate': 'novalidate'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.zipCode,{ 'label' : 'zip.code'|trans,'attr': {'class': 'form-control','novalidate': 'novalidate'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.country,{ 'label' : 'country'|trans,'attr': {'class': 'form-control','novalidate': 'novalidate'} }) }}

            </div>
            <div class="form-group col-lg-6">
                {{ form_row(form.phone,{ 'label' : 'phone'|trans,'attr': {'class': 'form-control','novalidate': 'novalidate'} }) }}

            </div>
             <div class="form-group col-lg-6">
                {{ form_row(form.paypalEmail,{ 'label' : 'paypal.email'|trans,'attr': {'class': 'form-control','novalidate': 'novalidate'} }) }}

            </div>
            


            <div class="form-group col-lg-6">
                {{ form_row(form.file,{ 'label' : 'image'|trans,'attr': { 'data-show-upload':'false',
                     'data-show-caption':'true','class': 'file'} }) }}

            </div>
            {{ form_rest(form) }}
        </div>
        <div class="text-center">
            <button class="btn btn-success">{{'layout.register'|trans}}</button>

        </div>
    </form>{# empty Twig template #}
{% endblock fos_user_content %}

{% trans_default_domain 'FOSUserBundle' %}


