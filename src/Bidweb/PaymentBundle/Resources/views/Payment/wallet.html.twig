{% set total = 0 %}
{% set totalSend = 0%}

{% extends '::landing.html.twig' %}

{% block content_title %}
    {{'wallet'|trans}}
{% endblock %}

{% block path %}

    <li><a href="#">{{'wallet'|trans}}</a></li>

{% endblock %}
{% set total = total %}
{% set totalSend = totalSend %}
{% block title %}{{'wallet'|trans}} - Bidweb{% endblock%}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="panel panel-info panel-colorful">
                <div class="panel-body text-center">
                    <p class="text-uppercase mar-btm text-sm">{{'earning'|trans}}</p>
                    <i class="fa fa-dollar fa-5x"></i>
                    <hr>
                    <p class="h2 text-thin"><span id="netTotalR"></span></p>
                    <p>
                        <a href="{{path('bidweb_checkout_paypal',{'email':app.user.email,'id':app.user.id}  )}}" class="btn btn-default">{{'cashout'|trans}}</a>
                    </p>
                    <small>
                        <span class="text-semibold">
                            <i class="fa fa-dollar fa-fw"></i> 
                            <span id="totalRFee"></span>
                                
                        </span> {{'bidweb.fee'|trans}} (10%)</small>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">{{'log'|trans}}</h3>
                </div>
                <div class="panel-body">
                    <label class="form-inline">{{'show'|trans}}
                        <select id="demo-show-entries" class="form-control input-sm">
                            <option value="5">5</option>
                            <option value="10" selected="true">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                        </select>
                        {{'entries'|trans}}
                    </label>
                    <table id="foo-pagination" class="table toggle-arrow-tiny" data-page-size="10">
                        <thead>
                            <tr>
                                <th data-toggle="true">{{'sender'|trans}}</th>
                                <th>{{'paypal.fee'|trans}}</th>
                                <th>{{'type'|trans}}</th>
                                <th>{{'amount'|trans}}</th>
                                
                                <th>{{'date'|trans}}</th>
                                <th data-hide="all">{{'detail'|trans}}</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in receive %}
                                {% if ad.status == 0 %}
                                   
                                    <tr>
                                        <td>{{ad.sender.firstName}} {{ad.sender.lastName}}</td>
                                        <td>{{ad.fee}}</td>
                                        {% set opt=1%}


                                        <td>
                                            {% if ad.type=='IN'%}
                                                <span>+</span>

                                            {% else %}

                                                <span>-</span>
                                                {% set opt=-1%}
                                            {% endif %}
                                        </td>
                                        <td>{{opt*ad.netTotalAmount}}</td>
                                        <td>{{ad.createdAt| created_ago}}</td>
                                        <td>{{ad.description}}</td>
                                    </tr>
                                    {% set total = total +(opt* ad.netTotalAmount) %}
                                {% endif%}
                            {% endfor %}


                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="text-right">
                                        <ul class="pagination"></ul>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <input type="hidden" value="{{total}}" id="totalReceive">
                    <input type="hidden" value="{{total*10/100}}" id="totalFee">
                    <input type="hidden" value="{{total-(total*10/100)}}" id="netTotalReceive">
                    
                </div>
            </div>
        </div>

    </div>

{% endblock %}


{% block javascripts %}
    {{parent()}}
    <script src="bundles/bidweb/nifty/plugins/fooTable/dist/footable.all.min.js"></script>

    <script>

        $(window).on('load', function () {
            $('#totalR').html($('#totalReceive').val());
            $('#totalRFee').html($('#totalFee').val());
            $('#netTotalR').html($('#netTotalReceive').val());

            // FOO TABLES
            // =================================================================
            // Require FooTable
            // -----------------------------------------------------------------
            // http://fooplugins.com/footable-demos/
            // =================================================================


            // Row Toggler
            // -----------------------------------------------------------------
            // Pagination
            // -----------------------------------------------------------------
            $('#foo-pagination').footable();
            $('#demo-show-entries').change(function (e) {
                e.preventDefault();
                var pageSize = $(this).val();
                $('#foo-pagination').data('page-size', pageSize);
                $('#foo-pagination').trigger('footable_initialized');
            });



        });


    </script>
{% endblock %}