{% block javascripts %}
    {{parent() }}
    <script src="bundles/bidweb/nifty/plugins/fooTable/dist/footable.all.min.js"></script>

    <script>
        $(window).on('load', function () {


            // FOO TABLES
            // =================================================================
            // Require FooTable
            // -----------------------------------------------------------------
            // http://fooplugins.com/footable-demos/
            // =================================================================


            // Row Toggler
            // -----------------------------------------------------------------
            // Pagination
            // -----------------------------------------------------------------
            $('#list-freelancers').footable();
            $('#list-jobs').footable();
            $('#list-domains').footable();
            $('#list-website').footable();
            $('#list-database').footable();
            $('#list-seotool').footable();
            
            $('#freelancer-show-entries').change(function (e) {
                e.preventDefault();
                var pageSize = $(this).val();
                $('#list-freelancers').data('page-size', pageSize);
                $('#list-freelancers').trigger('footable_initialized');
            });
            
            $('#job-show-entries').change(function (e) {
                e.preventDefault();
                var pageSize = $(this).val();
                $('#list-jobs').data('page-size', pageSize);
                $('#list-jobs').trigger('footable_initialized');
            });
            
            $('#domain-show-entries').change(function (e) {
                e.preventDefault();
