{% extends 'BidwebBundle::layout.html.twig' %}

{% block body %}
  
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#tab-website">{{ 'my.web.site'|trans }}</a></li>
        <li><a data-toggle="tab" href="#tab-seotool">{{ 'my.seo'|trans }}</a></li>
        <li><a data-toggle="tab" href="#tab-database">{{'my.database'|trans}}</a></li>
        <li><a data-toggle="tab" href="#tab-domain">{{'my.domain'|trans}}</a></li>
        <li><a data-toggle="tab" href="#tab-job">{{'my.job'|trans}}</a></li>
        <li><a data-toggle="tab" href="#tab-freelancer">{{'my.profile'|trans}}</a></li>
        <li><a data-toggle="tab" href="#tab-app">{{'my.app'|trans}}</a></li>
    </ul>

  <div class="tab-content">
    <div id="tab-website" class="tab-pane fade in active">
        
      <h3>{{ 'web.site'|trans }}</h3>
      <table class="table">
           <tr>
               <th>Title</th>
               <th>Detail</th>
               <th>Date</th>
               <th>---</th>
           </tr>
      {% for ad in websites %}
          
         <tr>
               <td>{{ad.title}}</td>
               <td>{{ ad.detail(50) | raw |striptags}}...</td>
               <td>{{ ad.created|date('l, F j, Y') }}</td>
               <td style="min-width: 180px;" width=""><a title ="Edit Website" href="#" class="btn btn-default">
                       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="Delete Website">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="View post">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                   </a>
               </td>
           </tr>
         
          
      {% endfor %}
       </table>
      
    </div>
    
    <div id="tab-seotool" class="tab-pane fade">
      <h3>{{ 'seo.tool'|trans }}</h3>
      <table class="table">
           <tr>
               <th>Title</th>
               <th>Detail</th>
               <th>Date</th>
               <th>---</th>
           </tr>
      {% for ad in seotools %}
          <tr>
               <td>{{ad.title}}</td>
               <td>{{ ad.detail(50) | raw |striptags}}...</td>
               <td>{{ ad.created|date('l, F j, Y') }}</td>
               <td style="min-width: 180px;" width=""><a title ="Edit Website" href="#" class="btn btn-default">
                       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="Delete Website">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="View post">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                   </a>
               </td>
           </tr>
      {% endfor %}
      </table>
     
    </div>
    <div id="tab-database" class="tab-pane fade">
      <h3>{{'database'|trans}}</h3>
      <table class="table">
           <tr>
               <th>Title</th>
               <th>Detail</th>
               <th>Date</th>
               <th>---</th>
           </tr>
      {% for ad in databases %}
           <tr>
               <td>{{ad.title}}</td>
               <td>{{ ad.detail(50) | raw |striptags}}...</td>
               <td>{{ ad.created|date('l, F j, Y') }}</td>
               <td style="min-width: 180px;" width=""><a title ="Edit Website" href="#" class="btn btn-default">
                       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="Delete Website">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="View post">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                   </a>
               </td>
           </tr>
      {% endfor %}
      </table>
      
                          
    </div>
    <div id="tab-domain" class="tab-pane fade">
      <h3>{{'domain'|trans}}</h3>
      <table class="table">
           <tr>
               <th>Title</th>
               <th>Detail</th>
               <th>Date</th>
               <th>---</th>
           </tr>
      {% for ad in domains %}
          <tr>
               <td>{{ad.title}}</td>
               <td>{{ ad.detail(50) | raw |striptags}}...</td>
               <td>{{ ad.created|date('l, F j, Y') }}</td>
               <td style="min-width: 180px;" width=""><a title ="Edit Website" href="#" class="btn btn-default">
                       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="Delete Website">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="View post">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                   </a>
               </td>
           </tr>
         
      {% endfor %}
      </table>
    </div>
    <div id="tab-job" class="tab-pane fade">
      <h3>{{'job'|trans}}</h3>
      <table class="table">
           <tr>
               <th>Title</th>
               <th>Detail</th>
               <th>Date</th>
               <th>---</th>
           </tr>
      {% for ad in jobs %}
          <tr>
               <td>{{ad.title}}</td>
               <td>{{ ad.description(50) | raw |striptags}}...</td>
               <td>{{ ad.created|date('l, F j, Y') }}</td>
               <td style="min-width: 180px;" width=""><a title ="Edit Website" href="#" class="btn btn-default">
                       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="Delete Website">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                   </a> 
                   <a href="{{ path('bidweb_job_showmy', { 'id': ad.id , 'slug':ad.slug}) }}" class="btn btn-default" title="View post">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                   </a>
               </td>
           </tr>
          
      {% endfor %}
      </table>
    </div>
    <div id="tab-freelancer" class="tab-pane fade">
      <h3>{{'freelancer'|trans}}</h3>
      <p><a href="" class="btn btn-primary">Create new Profile</a></p>
      <table class="table">
           <tr>
               <th>Title</th>
               <th>Detail</th>
               <th>Date</th>
               <th>---</th>
           </tr>
      {% for ad in freelancers %}
          <tr>
               <td>{{ad.title}}</td>
               <td>{{ ad.description(50) | raw |striptags}}...</td>
               <td>{{ ad.created|date('l, F j, Y') }}</td>
               <td style="min-width: 180px;" width="">
                   <a title ="Edit Website" href="#" class="btn btn-default">
                       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="Delete Website">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                   </a> 
                   <a href="#" class="btn btn-default" title="View post">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                   </a>
               </td>
           </tr>
          
      {% endfor %}
      </table>
    </div>
    <div id="tab-app" class="tab-pane fade">
      <h3>{{'my.app'|trans}}</h3>
      <table class="table">
           <tr>
               <th>Job</th>
               <th>Message</th>
               <th>Date</th>
               <th>Status</th>
               <th>---</th>
           </tr>
      {% for ad in apps %}
          <tr>
               <td>{{ad.job.title}}</td>
               <td>{{ ad.message(50) | raw |striptags}}...</td>
               <td>{{ ad.created|date('l, F j, Y') }}</td>
               <td>
                   {% if ad.status==0 %}

                       <span>Wait</span>
                   {% elseif ad.status == 1 %}
                       <span>Accepted</span>
                   {% else %}
                       <span>Declined</span>
                   {% endif %}
               </td>
               <td style="min-width: 180px;" width="">
                       
                       <a href="#" class="btn btn-default" title="Delete Application">
                           <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                       </a> 
                       <a href="#" class="btn btn-default" title="View job">
                           <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                       </a>
               </td>
           </tr>
      {% endfor %}
      </table>
    </div>
  </div>
    
   

{% endblock %}
