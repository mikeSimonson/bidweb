
{% extends '::guest.html.twig' %}
{% block title %}{{'profile'|trans}}{% endblock%}

{% block body %}
    <div id="wrapper">
        <section>
            <div class="normalheader transition animated fadeIn">
                <div class="hpanel">
                    <div class="panel-body">
                        <a class="small-header-action" href="#">
                            <div class="clip-header">
                                <i class="fa fa-arrow-up"></i>
                            </div>
                        </a>
                        <div id="hbreadcrumb" class="pull-right m-t-lg">
                            <ol class="hbreadcrumb breadcrumb">
                                <li><a href="/">Bidweb</a></li>
                                <li>
                                    <a href="{{path('freelancer')}}"><span>{{'freelancers'|trans}}</span></a>
                                </li>
                                <li class="active">
                                    <span>{{'detail'|trans}} </span>
                                </li>
                            </ol>
                        </div>
                        <h2 class="font-light m-b-xs">
                            {{'freelancer'|trans}}
                        </h2>
                       
                    </div>
                </div>
            </div>
        </section>
        <div class="content animate-panel">
            <div class="row">
                <div class="col-lg-4">
                    <div class="hpanel hgreen">
                        <div class="panel-body">
                            <div class="pull-right text-right">
                                <div class="btn-group">
                                    <i class="fa fa-facebook btn btn-default btn-xs"></i>
                                    <i class="fa fa-twitter btn btn-default btn-xs"></i>
                                    <i class="fa fa-linkedin btn btn-default btn-xs"></i>
                                </div>
                            </div>
                            {% if prof.user.image != 'empty' %}
                                <img class="img-circle m-b m-t-md" src="{{asset(prof.user.getWebPathImage()) }}" alt="{{ prof.title }} image not found" alt="Bidweb" width="76" height="76" />
                            {% else %}
                                <img src="{{asset("img/av1.png")}}" alt="Bidweb" width="76" height="76">
                            {% endif %}
                            <h3><a href="#">{{ prof.title }}</a></h3>
                            
                        </div>
                        <div class="panel-body">
                            <dl>
                                <dt>{{'diploma1'|trans}}</dt>
                                <dd>{{prof.diploma}}</dd>
                                
                                {% if prof.diploma2 %}
                                    <dt>{{'diploma2'|trans}}</dt>
                                    <dd>{{prof.diploma2}}</dd>
                                {% endif %}
                                
                               {% if prof.diploma3 %}
                                    <dt>{{'diploma3'|trans}}</dt>
                                    <dd>{{prof.diploma3}}</dd>
                                {% endif %}
                                
                                {% if prof.certification %}
                                    <dt>{{'certif1'|trans}}</dt>
                                    <dd>{{prof.certification}}</dd>
                                {% endif %}
                                
                                {% if prof.certification2 %}
                                    <dt>{{'certif2'|trans}}</dt>
                                    <dd>{{prof.certification2}}</dd>
                                {% endif %}
                                
                                {% if prof.certification3 %}
                                    <dt>{{'certif3'|trans}}</dt>
                                    <dd>{{prof.certification3}}</dd>
                                {% endif %}
                                
                          
                               
                                {% if is_granted('ROLE_USER')%}
                                    {% if app.user.id != prof.user.id %}
                                        <dd><a class="like" href="{{path('user_send_msg',{'receiver':prof.user.id})}}" class="text-success">{{'contact.poster'|trans}}</a></dd>
                                        
                                    {% else %}
                                        <dd><a class="like" href="{{path('editprofile',{'id':prof.id})}}" class="text-success">{{'edit'|trans}}</a></dd>
                                    {% endif %}
                                {% else %}
                                    <dd>{{'you.must'|trans}} <a class="text-success" href='{{ path('fos_user_security_login') }}'> {{'login'|trans}}</a> {{'to.contact.poster'|trans}}.<br>
                                    </dd>
                                    <dd>{{'or'|trans}} 
                                        <a href='{{ path('fos_user_registration_register') }}' class="text-success">{{'create.new.account'|trans}}</a></dd>
                                    {% endif %}
                            </dl>
                        </div>
                        <div class="panel-footer contact-footer">
                            <div class="row">
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="hpanel">
                        <div class="hpanel hgreen">
                            <div class="panel-body">
                                <h3><a href="#">{{'detail'|trans}}</a></h3>
                                <p>{{prof.description}}</p>
                                
                            </div>
                        </div>
                    </div>
                </div>    
            </div>  
        </div>
    </div>
        
{% endblock %}